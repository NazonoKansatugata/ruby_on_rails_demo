<h1>記事編集</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit '更新' %>
  </div>
<% end %>
<%= link_to '一覧に戻る', posts_path %>
